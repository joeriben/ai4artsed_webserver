{
  "name": "manipulate",
  "description": "Prompt Interception: Three-part transformation (TASK + CONTEXT + PROMPT)",
  "template": "Task:\n{{TASK_INSTRUCTION}}\n\nContext:\n{{CONTEXT}}\n\nPrompt:\n{{INPUT_TEXT}}",
  "backend_type": "ollama",
  "model": "STAGE2_MODEL",
  "parameters": {
    "temperature": 0.7,
    "top_p": 0.9,
    "stream": false,
    "keep_alive": "10m"
  },
  "meta": {
    "chunk_type": "manipulation",
    "output_format": "text",
    "estimated_duration": "fast",
    "prompt_interception": true,
    "required_placeholders": ["TASK_INSTRUCTION", "CONTEXT", "INPUT_TEXT"]
  }
}
