{
  "name": "output_image_gpt5",
  "type": "api_output_chunk",
  "backend_type": "openai",
  "media_type": "image",
  "description": "GPT-5 Image (gpt-image-1) - Official OpenAI Images API with base64 response",

  "api_config": {
    "provider": "openai",
    "model": "gpt-image-1",
    "endpoint": "https://api.openai.com/v1/images/generations",
    "method": "POST",
    "headers": {
      "Authorization": "Bearer {{OPENAI_API_KEY}}",
      "Content-Type": "application/json"
    },
    "request_body": {
      "model": "gpt-image-1",
      "prompt": "{{PROMPT}}",
      "n": 1,
      "response_format": "b64_json"
    }
  },

  "input_mappings": {
    "prompt": {
      "field": "request_body.prompt",
      "source": "{{PREVIOUS_OUTPUT}}",
      "description": "Image generation prompt"
    }
  },

  "output_mapping": {
    "type": "images_api_base64",
    "format": "base64",
    "extract_path": "data[0].b64_json",
    "description": "Extract base64 image data from OpenAI Images API response"
  },

  "meta": {
    "estimated_duration_seconds": "5-15",
    "requires_gpu": false,
    "api_provider": "openai",
    "model_id": "gpt-image-1",
    "provider_model_id": "gpt-image-1",
    "cost_per_image": "$0.04 per image",
    "context_length": 400000,
    "max_prompt_tokens": 4000,
    "modalities": {
      "input": ["text"],
      "output": ["image"]
    },
    "features": [
      "Advanced reasoning mode",
      "High-quality image generation",
      "Text rendering in images",
      "Direct base64 output"
    ],
    "notes": "Official OpenAI Images API (gpt-image-1). Returns base64-encoded images directly. Requires OPENAI_API_KEY environment variable. Response format: {data: [{b64_json: 'base64string'}]}"
  }
}
